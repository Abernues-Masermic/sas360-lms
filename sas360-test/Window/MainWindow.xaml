                                                                <GridViewColumn x:Name="Gridview_event_val5" Width="120" Header="VAL5" DisplayMemberBinding="{Binding Val5}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_event_val6" Width="120" Header="VAL6" DisplayMemberBinding="{Binding Val6}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_event_val7" Width="120" Header="VAL7" DisplayMemberBinding="{Binding Val7}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_event_val8" Width="120" Header="VAL8" DisplayMemberBinding="{Binding Val8}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_event_abs_index_copy" Width="120"  Header="INDEX COPY" DisplayMemberBinding="{Binding Absolute_event_index_copy}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            </GridView>
                                                        </ListView.View>
                                                    </ListView>
