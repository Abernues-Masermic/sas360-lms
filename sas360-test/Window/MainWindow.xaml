                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="900"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="Border_sas360_data_state"  Grid.Column="0" Margin="5" Style="{StaticResource Border_shadow}" Background="White"  >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="422"></RowDefinition>
                                        </Grid.RowDefinitions>


                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Style="{StaticResource Border_shadow}">
                                                <StackPanel Orientation="Vertical">
                                                    <Border>
                                                        <Grid Width="450">
                                                            <Label x:Name="Label_main_state" Style="{DynamicResource ResourceKey=Label_subtitle}"  HorizontalAlignment="Center" Margin="3"  Content="INIT_AUTODET_SELFT_CONTAG"/>
