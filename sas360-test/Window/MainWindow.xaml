                                                            <Label x:Name="Label_main_codif_management_1" Style="{StaticResource Label_standard}" Width="70" Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="77" HorizontalAlignment="Left">CDF__MNG__2:</Label>
                                                            <Label x:Name="Label_main_codif_management_2" Style="{StaticResource Label_standard}" Width="70" Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="77" HorizontalAlignment="Left">DIG__INPUT:</Label>
