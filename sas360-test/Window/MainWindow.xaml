                                                                <GridViewColumn x:Name="Gridview_event_abs_index" Width="100"  Header="ABS INDEX" DisplayMemberBinding="{Binding Absolute_event_index}"  HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
