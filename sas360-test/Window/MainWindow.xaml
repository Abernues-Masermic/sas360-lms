                                                        <Image  Height="140" Source="/Images/wait.png" Margin="5"/>
                                                        <Label x:Name="Label_sas360con_hist_wait"  FontSize="24" Content="WAIT..." HorizontalContentAlignment="Center" Height="145" Width="380" Padding="1" FontFamily="Cambria" FontWeight="Bold" BorderBrush="Black" BorderThickness="2"  Foreground="Black" Background="White"  VerticalContentAlignment="Center" />
                                                        <Button x:Name="Button_sfront_sas360con_hist_log" Style="{StaticResource Button_rounded}"  Height="35" Margin="5" Content="STOP" Click="Button_sfront_sas360con_hist_log_Click"/>
                                                    </WrapPanel>
                                                </Border>

                                            </Grid>
                                        </TabItem.Content>
                                    </TabItem>


                                </TabControl>
                            </Grid>
                        </Border>
                    </TabItem>

                </TabControl>
            </Grid>

        </Border>
    </Border>
</Window>
