                                                        <Image  Height="140" Source="/Images/wait.png" Margin="5"/>

                                                        <Border  Width="380" >
                                                            <StackPanel >
                                                                <Label x:Name="Label_sas360con_wait"  Style="{StaticResource Label_wait}"  Content="WAIT..." Height="100" Margin="0,5,0,5"/>
