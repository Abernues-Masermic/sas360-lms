                                                                <Label x:Name="Label_param6" Content="PARAM 6"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="200"/>
                                                                <xctk:DecimalUpDown Name="DecimalUpDown_param6"   Style="{StaticResource DecimalUpDownStyle}" Width="100"/>
                                                                <Label x:Name="Label_type6" Content="UInt16" Margin="5,0,0,0"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="80"/>
                                                            </WrapPanel>

                                                            <WrapPanel x:Name="Wrappanel_param7"  Orientation="Horizontal" Margin="1,5,1,1">
                                                                <Label x:Name="Label_param7" Content="PARAM 7"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="200"/>
                                                                <xctk:DecimalUpDown Name="DecimalUpDown_param7"   Style="{StaticResource DecimalUpDownStyle}" Width="100"/>
                                                                <Label x:Name="Label_type7" Content="UInt16" Margin="5,0,0,0"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="80"/>
                                                            </WrapPanel>

                                                            <WrapPanel x:Name="Wrappanel_param8"  Orientation="Horizontal" Margin="1,5,1,1">
                                                                <Label x:Name="Label_param8" Content="PARAM 8"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="200"/>
                                                                <xctk:DecimalUpDown Name="DecimalUpDown_param8"   Style="{StaticResource DecimalUpDownStyle}" Width="100"/>
                                                                <Label x:Name="Label_type8" Content="UInt16" Margin="5,0,0,0"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="80"/>
                                                            </WrapPanel>

                                                            <WrapPanel x:Name="Wrappanel_param9"  Orientation="Horizontal" Margin="1,5,1,1">
                                                                <Label x:Name="Label_param9" Content="PARAM 9"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="200"/>
                                                                <xctk:DecimalUpDown Name="DecimalUpDown_param9"   Style="{StaticResource DecimalUpDownStyle}" Width="100"/>
                                                                <Label x:Name="Label_type9" Content="UInt16" Margin="5,0,0,0"  Style="{StaticResource Label_standard_bold}" Padding="6" Width="80"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal"  Margin="0,20,10,20"  HorizontalAlignment="Right" >
                                                                <Button x:Name="Button_send_command" Style="{StaticResource Button_rounded}" Width="150" Height="30"  Click="Button_send_command_Click">SEND</Button>

                                                                <Grid Height="30" Margin="5,0,0,0">
                                                                    <Image x:Name="Image_command_warning" Source="/Images/warning.png" Visibility="Hidden"/>
                                                                    <Image x:Name="Image_command_ok" Source="/Images/apply.png" Visibility="Hidden"/>
                                                                    <Image x:Name="Image_command_error" Source="/Images/delete.png" Visibility="Hidden"/>
                                                                </Grid>
                                                            </WrapPanel>
                                                        </WrapPanel>
                                                    </Border>

                                                </StackPanel>

                                                <WrapPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top"  >
                                                    <Button x:Name="Button_new_command" Style="{StaticResource Button_rounded}" Height="30" Width="30" Margin="5" Click="Button_new_command_Click">
                                                        <Image Height="22" Width="22" Source="/Images/add.png"/>
                                                    </Button>
                                                    <Button x:Name="Button_delete_command" Style="{StaticResource Button_rounded}" Height="30" Width="30" Margin="5" Click="Button_delete_command_Click">
                                                        <Image Height="22" Width="22" Source="/Images/delete.png"/>
                                                    </Button>

                                                    <Button x:Name="Button_refresh_command" Style="{StaticResource Button_rounded}" Height="30" Width="30" Margin="5" Click="Button_refresh_command_Click">
                                                        <Image Height="22" Width="22" Source="/Images/actualizar.png"/>
                                                    </Button>
                                                </WrapPanel>
                                            </Grid>
                                        </TabItem.Content>
                                    </TabItem>

                                    <TabItem Name="TabItem_event_logs" Header="EVENT LOGS" Style="{DynamicResource ResourceKey=Tabitem_submenu_style}">
                                        <TabItem.Content>
                                            <Grid  Background="{DynamicResource ResourceKey=Tabcontent_panel}">

                                                <WrapPanel>
                                                    <Button x:Name="Button_read_event_log" Style="{StaticResource Button_rounded}" Height="30" Width="120" Content="READ" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_read_event_log_Click"/>

                                                    <Grid>
                                                        <Image x:Name="Image_warning_event_log" Visibility="Collapsed"  Source="/Images/warning.png" Height="25" />
                                                        <Image x:Name="Image_read_ok_event_log" Visibility="Collapsed"  Source="/Images/apply.png" Height="25" />
                                                    </Grid>
                                                </WrapPanel>

                                                <ListView x:Name="Listview_event_log" Style="{StaticResource Listview_style}"
                                                              HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5, 40, 5, 5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                    <ListView.View>
                                                        <GridView  >
                                                            <GridViewColumn x:Name="Gridview_event_index" Width="100"  Header="INDEX" DisplayMemberBinding="{Binding Index, Converter={StaticResource DataToHexConverter}}"  HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_rtc_value" Width="160"  Header="RTC VALUE" DisplayMemberBinding="{Binding RTC}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_rtc_milisec" Width="120"  Header="RTC MILISEC" DisplayMemberBinding="{Binding Miliseconds}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_reg_id" Width="120"  Header="REGISTER ID" DisplayMemberBinding="{Binding Register_id}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val1" Width="120"  Header="VAL1" DisplayMemberBinding="{Binding Val1}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val2" Width="120"  Header="VAL2" DisplayMemberBinding="{Binding Val2}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val3" Width="120"  Header="VAL3" DisplayMemberBinding="{Binding Val3}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val4" Width="120"  Header="VAL4" DisplayMemberBinding="{Binding Val4}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val5" Width="120"  Header="VAL5" DisplayMemberBinding="{Binding Val5}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_event_val6" Width="120"  Header="VAL6" DisplayMemberBinding="{Binding Val6}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>

                                                <Button x:Name="Button_export_event_log" Style="{StaticResource Button_rounded}"  VerticalAlignment="Top" HorizontalAlignment="Right"  Height="30" Width="30" Margin="5" Click="Button_export_event_log_Click">
                                                    <Image Height="22" Width="22" Source="/Images/excel.png"/>
                                                </Button>

                                                <Border x:Name="Border_wait_event_log"  Style="{StaticResource Border_shadow}" Visibility="Collapsed" Background="#801159BF"  HorizontalAlignment="Stretch" >
                                                    <WrapPanel HorizontalAlignment="Center" Margin="10" Orientation="Vertical" VerticalAlignment="Center">
                                                        <Image  Height="140" Source="/Images/wait.png" Margin="5"/>
                                                        <Label x:Name="Label_wait"  FontSize="24" Content="WAIT..." HorizontalContentAlignment="Center" Height="145" Width="380" Padding="1" FontFamily="Cambria" FontWeight="Bold" BorderBrush="Black" BorderThickness="2"  Foreground="Black" Background="White"  VerticalContentAlignment="Center" />
                                                        <Button x:Name="Button_stop_event_log" Style="{StaticResource Button_rounded}"  Height="35" Margin="5" Content="STOP" Click="Button_stop_event_log_Click"/>


                                                    </WrapPanel>
                                                </Border>

                                            </Grid>
                                        </TabItem.Content>
                                    </TabItem>

                                    <TabItem Name="TabItem_hist_logs" Header="HIST LOGS" Style="{DynamicResource ResourceKey=Tabitem_submenu_style}">
                                        <TabItem.Content>
                                            <Grid  Background="{DynamicResource ResourceKey=Tabcontent_panel}">

                                                <Button x:Name="Button_read_hist_log" Style="{StaticResource Button_rounded}" Height="30" Width="120" Content="READ" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_read_hist_log_Click"/>

                                                <ListView x:Name="Listview_hist_log" Style="{StaticResource Listview_style}"
                                                              HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5, 40, 5, 5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                    <ListView.View>
                                                        <GridView  >
                                                            <GridViewColumn x:Name="Gridview_hist_index" Width="100"  Header="INDEX"  DisplayMemberBinding="{Binding Index, Converter={StaticResource DataToHexConverter}}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_hist_rtc_value" Width="120"  Header="RTC VALUE" DisplayMemberBinding="{Binding RTC}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_hist_rtc_milisec" Width="120"  Header="RTC MILISEC" DisplayMemberBinding="{Binding Miliseconds}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_hist_reg_type_codif" Width="120"  Header="TYPE CODIF" DisplayMemberBinding="{Binding Type_codif}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            <GridViewColumn x:Name="Gridview_hist_logged_value" Width="150"  Header="LOGGED VALUE" DisplayMemberBinding="{Binding Logged_value}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>

                                                <Button x:Name="Button_export_hist_log" Style="{StaticResource Button_rounded}"  VerticalAlignment="Top" HorizontalAlignment="Right"  Height="30" Width="30" Margin="5" Click="Button_export_hist_log_Click">
                                                    <Image Height="22" Width="22" Source="/Images/excel.png"/>
                                                </Button>

                                            </Grid>
                                        </TabItem.Content>
                                    </TabItem>


                                </TabControl>
                            </Grid>
                        </Border>
                    </TabItem>

                </TabControl>
            </Grid>

        </Border>
    </Border>
</Window>
