                                                                </DockPanel>
                                                            </StackPanel>
                                                        </Border>
                                                        <Button x:Name="Button_sfront_sas360con_event_log" Style="{StaticResource Button_rounded}"  Height="35" Margin="0,5,0,0" Content="STOP" Click="Button_sfront_sas360con_event_log_Click"/>
                                                    </WrapPanel>
                                                </Border>

                                            </Grid>
                                        </TabItem.Content>
                                    </TabItem>

                                    <TabItem Name="TabItem_hist_logs" Header="HIST LOGS" Style="{DynamicResource ResourceKey=Tabitem_submenu_style}">
