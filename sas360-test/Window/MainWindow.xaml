                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="67">VEHICLE ID:</Label>
                                                                <Label x:Name="Label_main_vehicle_type_id" Style="{StaticResource Label_standard}" Width="50"/>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" Margin="1">

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60">TAG ID:</Label>
                                                                <Label x:Name="Label_main_tag_id_fab" Style="{StaticResource Label_standard}" Width="70"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60">TAG TYPE:</Label>
                                                                <Label x:Name="Label_main_tag_type" Style="{StaticResource Label_standard}" Width="70"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60">CON ID:</Label>
                                                                <Label x:Name="Label_main_consola_id" Style="{StaticResource Label_standard}" Width="70"/>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Vertical" Grid.Column="2"  HorizontalAlignment="Right" Margin="1">

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="50">S.N:</Label>
                                                                <Label x:Name="Label_main_serial_number" Style="{StaticResource Label_standard}" Width="100"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
