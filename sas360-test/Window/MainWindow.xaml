<Window x:Class="sas360_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:sas360_test"
        xmlns:controls="clr-namespace:sas360_test.CustomControl"
        xmlns:converter="clr-namespace:sas360_test" 
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1000" Width="1860"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"  
        AllowsTransparency="True"  
        Background="Transparent"      
        Loaded="Window_Loaded">

    <Window.Resources>

        <converter:FormatToInfoConverter x:Key="FormatToInfoConverter"/>
        <converter:DataToHexConverter x:Key="DataToHexConverter"/>

    
        <Storyboard x:Key="BlinkConnectStoryboard" x:Name="BlinkConnect">
            <ColorAnimation From="White" To="Green"  RepeatBehavior="Forever" Duration="00:00:00.3"
                            Storyboard.TargetName="Ellipse_blink"
                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"/>
        </Storyboard>

        <Storyboard  x:Key="TagZoneStrokeStoryBoard" x:Name="TagZoneStrokeStoryBoard">
            <ColorAnimation From="Black" To="#FF6459" Duration="0:0:1" RepeatBehavior="Forever" 
                            Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)" />
        </Storyboard>

        <Storyboard x:Key="ShowHideStoryboard">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="{x:Null}" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:01" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>

    <Border  Style="{StaticResource Border_background_separator}">
        <Border  Style="{StaticResource Border_background}">

            <Grid>

                <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top" Height="45" Margin="640,15,0,0" Width="70" Panel.ZIndex="1000">

                    <Grid  Panel.ZIndex="1000">
                        <Image x:Name="Image_start" Visibility="Collapsed"  Cursor="Hand" Source="/Images/Start.png" MouseDown="Image_start_MouseDown"/>
                        <Image x:Name="Image_stop" Visibility="Visible" Cursor="Hand" Source="/Images/Stop.png" MouseDown="Image_stop_MouseDown"/>
                    </Grid>

                    <Ellipse Name="Ellipse_blink" Fill="White" Stroke="Black" StrokeThickness="0.3"  Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="5">
                        <Ellipse.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="-5" ShadowDepth="1" Softness=".1" />
                        </Ellipse.BitmapEffect>
                    </Ellipse>
                </WrapPanel>


                <StackPanel Orientation="Horizontal"   VerticalAlignment="Top" HorizontalAlignment="Right"  Margin="2,5,10,2"  Panel.ZIndex="1000">

                    <Button x:Name="Button_minimize" Style="{StaticResource Button_rounded}"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_minimize_Click">
                        <Line X1="0" X2="10" Stroke="Black" StrokeThickness="2" />
                    </Button>

                    <Grid>
                        <Button x:Name="Button_maximize" Style="{StaticResource Button_rounded}" Visibility="Visible" Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_maximize_Click">
                            <Rectangle Width="10" Height="10" Stroke="Black" StrokeThickness="2"></Rectangle>
                        </Button>

                        <Button x:Name="Button_normal_window" Style="{StaticResource Button_rounded}" Visibility="Collapsed"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_normal_window_Click">
                            <Grid Margin="-1,-1,0,0">
                                <Rectangle Width="9" Height="9" Margin="4,0,0,0" Stroke="Black"  StrokeThickness="1"/>
                                <Rectangle Width="9" Height="9" Margin="0,4,0,0"  Stroke="Black" Fill="White"   StrokeThickness="1"/>
                            </Grid>
                        </Button>
                    </Grid>

                    <Button x:Name="Button_exit" Style="{StaticResource Button_rounded}"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_exit_Click">
                        <Path Data="M0,0L10,10M10,0L0,10" Stroke="Black" StrokeThickness="2" />
                    </Button>

                </StackPanel>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Height="30" Margin="5, 35,10,0"  VerticalAlignment="Top" Panel.ZIndex="1000"   >
                    <Button x:Name="Button_setting_app" Style="{StaticResource Button_rounded}" Height="30" Width="30"  Click="Button_setting_app_Click">
                        <Image Height="22" Width="22" Source="/Images/settings.png"/>
                    </Button>
                </StackPanel>

                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30,15,0,0" >
                    <Image  Width="340"  VerticalAlignment="Bottom" Source="/Images/senspain_360_white.png" MouseLeftButtonDown="Title_MouseDown"/>
                    <Label x:Name="Label_ver" Style="{StaticResource Label_standard_bold}" Foreground="White" Content="v.1.0" Margin="6,0,0,3"  VerticalAlignment="Bottom" />
                </WrapPanel>


                <Image  Width="165" Margin="680,2,40,0" VerticalAlignment="Top"  Source="/Images/senspain_logo.png"/>
                <Image  Width="110" Margin="0,38,50,0"  VerticalAlignment="Top" HorizontalAlignment="Right"  Source="/Images/masermic_sin_mechatronic_v2.png" />

                <TabControl x:Name="TabControl_menu" Margin="10,15,10,10"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Style="{DynamicResource ResourceKey=Tabcontrol_style}" SelectionChanged="Tab_menu_SelectionChanged">
                    <TabItem x:Name="Tab_state" Header="STATE"   Style="{DynamicResource ResourceKey=Tabcontrol_item_left_style}">
                        <Border x:Name="Border_state" Style="{StaticResource Border_shadow}"  BorderThickness="3,3,2,2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="900"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="Border_sas360_data_state"  Grid.Column="0" Margin="5" Style="{StaticResource Border_shadow}" Background="White"  >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>


                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Style="{StaticResource Border_shadow}" >
                                                <StackPanel Orientation="Vertical" >
                                                    <Border BorderBrush="Gray" BorderThickness="0,0,2,2">
                                                        <WrapPanel Orientation="Horizontal" Margin="2">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">STATE:</Label>
                                                            <Label x:Name="Label_main_state" Style="{StaticResource Label_standard}"  Width="170"/>
                                                        </WrapPanel>
                                                    </Border>

                                                    <WrapPanel Orientation="Horizontal" Margin="2">
                                                        <Label Style="{StaticResource Label_standard_bold}"  Width="80">SUBSTATE:</Label>
                                                        <Label x:Name="Label_main_substate" Style="{StaticResource Label_standard}" Width="170"/>
                                                    </WrapPanel>

                                                    <WrapPanel Orientation="Horizontal" Margin="2" >
                                                        <Label Style="{StaticResource Label_standard_bold}" Width="80">ERROR  CODE:</Label>
                                                        <Label x:Name="Label_main_error_code" Style="{StaticResource Label_standard}" Width="170" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave" Cursor="Hand" Foreground="#01336d"/>
                                                    </WrapPanel>

                                                    <WrapPanel Orientation="Horizontal" Margin="2" >
                                                        <Label Style="{StaticResource Label_standard_bold}" Width="80" VerticalAlignment="Top">VEHICLE:</Label>

                                                        <WrapPanel Orientation="Vertical">

                                                            <WrapPanel Orientation="Horizontal">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60">POS X:</Label>
                                                                <Label x:Name="Label_main_vehicle_pos_x" Style="{StaticResource Label_standard}" Width="60" HorizontalContentAlignment="Center" Content=""/>

                                                                <Label Style="{StaticResource Label_standard_bold}" Margin="20,0,0,0" Width="60">POS Y:</Label>
                                                                <Label x:Name="Label_main_vehicle_pos_y" Style="{StaticResource Label_standard}" Width="60" HorizontalContentAlignment="Center" Content=""/>

                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60" Margin="10,0,0,0">cm</Label>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60">LAT:</Label>
                                                                <Label x:Name="Label_main_vehicle_lat" Style="{StaticResource Label_standard}" Width="60" HorizontalContentAlignment="Center" Content=""/>

                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60" Margin="20,0,0,0">LON:</Label>
                                                                <Label x:Name="Label_main_vehicle_lon" Style="{StaticResource Label_standard}" Width="60" HorizontalContentAlignment="Center" Content=""/>

                                                                <Label Style="{StaticResource Label_standard_bold}" Width="60" Margin="10,0,0,0">º</Label>
                                                            </WrapPanel>

                                                        </WrapPanel>
                                                    </WrapPanel>

                                                    <Line X1="5" X2="300" Height="10" Margin="0,10,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappanel_processing_task" Orientation="Horizontal">

                                                        <Label Style="{StaticResource Label_standard_bold}" Width="140" HorizontalAlignment="Left">PROCESSING TASKS (SEC)</Label>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task1" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task2" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task3" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task4" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task5" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                        <Border Style="{StaticResource Border_label_style}"  Margin="3,0,3,0">
                                                            <Label x:Name="Label_processing_task6" Style="{StaticResource Label_standard}" Width="40" HorizontalContentAlignment="Center" Content=""/>
                                                        </Border>

                                                    </WrapPanel>

                                                    <Line X1="5" X2="300" Height="10" Margin="0,10,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappanel_output" Orientation="Vertical">

                                                        <Label Style="{StaticResource Label_standard_bold}" Width="100" HorizontalAlignment="Left">I / O STATES</Label>

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">INPUT</Label>
                                                            <Label x:Name="Label_main_input" Style="{StaticResource Label_standard}" Width="70" Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">OUT INT:</Label>
                                                            <Label x:Name="Label_main_output_int" Style="{StaticResource Label_standard}" Width="70"  Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">OUT EXT:</Label>
                                                            <Label x:Name="Label_main_output_ext" Style="{StaticResource Label_standard}" Width="70"  Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>

                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">OUT LED:</Label>
                                                            <Label x:Name="Label_main_output_led" Style="{StaticResource Label_standard}" Width="70"  Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">CODIF LED1:</Label>
                                                            <Label x:Name="Label_main_output_codif_led1" Style="{StaticResource Label_standard}" Width="70"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">CODIF LED2:</Label>
                                                            <Label x:Name="Label_main_output_codif_led2" Style="{StaticResource Label_standard}" Width="70"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">AUDIO1:</Label>
                                                            <Label x:Name="Label_main_output_audio1" Style="{StaticResource Label_standard}" Width="70"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="70" HorizontalAlignment="Left">AUDIO2:</Label>
                                                            <Label x:Name="Label_main_output_audio2" Style="{StaticResource Label_standard}" Width="70"/>

                                                        </WrapPanel>

                                                    </WrapPanel>

                                                    <Line X1="5" X2="300" Height="10" Margin="0,10,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappanel_integrity" Orientation="Vertical">

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="100" HorizontalAlignment="Left">LMS WD:</Label>
                                                            <Label x:Name="Label_main_lms_watchdog" Style="{StaticResource Label_standard}" Width="100"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2" >
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="100" HorizontalAlignment="Left">LAST EVENT ID:</Label>
                                                            <Label x:Name="Label_main_last_event_id" Style="{StaticResource Label_standard}" Width="100"/>
                                                        </WrapPanel>

                                                    </WrapPanel>

                                                </StackPanel>
                                            </Border>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Style="{StaticResource Border_shadow}">
                                                    <Grid>
                                                        <WrapPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5">

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">CLIENT:</Label>
                                                                <Label x:Name="Label_main_client_code" Style="{StaticResource Label_standard}" Width="120"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">INSTALLATION:</Label>
                                                                <Label x:Name="Label_main_installation_code" Style="{StaticResource Label_standard}" Width="120"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">CONSOLE:</Label>
                                                                <Label x:Name="Label_main_console_code" Style="{StaticResource Label_standard}" Width="120"/>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Vertical" HorizontalAlignment="Right"  Width="210" Margin="5">
                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">VER HW:</Label>
                                                                <Label x:Name="Label_main_version_hw" Style="{StaticResource Label_standard}" Width="100"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">VER FW:</Label>
                                                                <Label x:Name="Label_main_version_fw" Style="{StaticResource Label_standard}" Width="100"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">VER BOOT:</Label>
                                                                <Label x:Name="Label_main_version_boot" Style="{StaticResource Label_standard}" Width="100"/>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <WrapPanel x:Name="Wrappannel_self_id"  Orientation="Vertical" HorizontalAlignment="Left" Margin="5, 120,5,5">
                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">CON TAG ID:</Label>
                                                                <Label x:Name="Label_main_assigned_self_contag_id" Style="{StaticResource Label_standard}" Width="220"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="2">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="90">DRV TAG ID:</Label>
                                                                <Label x:Name="Label_main_assigned_self_drvtag_id" Style="{StaticResource Label_standard}" Width="220"/>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <Border Background="Black" CornerRadius="5" Width="250" Margin="2" VerticalAlignment="Bottom" >
                                                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <Label x:Name="Label_rtc_utc_sas360con"  Style="{StaticResource Label_subtitle}" Padding="2">01/01/2023 12:00:00</Label>
                                                                <Label Style="{StaticResource Label_subtitle}" Padding="1" >:</Label>
                                                                <Label x:Name="Label_milliseconds_sas360con"  Style="{StaticResource Label_subtitle}" HorizontalContentAlignment="Left">345234</Label>
                                                            </WrapPanel>
                                                        </Border>

                                                        <Line Y1="5" Y2="100" Width="10" Stroke="Black" HorizontalAlignment="Center"/>

                                                        <Line X1="10" X2="200" Height="10" Stroke="Black" VerticalAlignment="Center"/>
                                                        <Line X1="240" X2="440" Height="10" Stroke="Black" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <Border Grid.Row="1" Style="{StaticResource Border_shadow}">
                                                    <WrapPanel Orientation="Vertical">

                                                        <WrapPanel Orientation="Horizontal">
                                                            <Label Style="{DynamicResource ResourceKey=Label_subtitle}" Margin="2" Content="UWB" VerticalAlignment="Top"/>

                                                            <WrapPanel Margin="5,3,5,0">
                                                                <WrapPanel Orientation="Horizontal" Margin="10,1" VerticalAlignment="Center"  >
                                                                    <Label Style="{StaticResource Label_standard_bold}" Width="60" HorizontalAlignment="Left">CONFIG:</Label>
                                                                    <Label x:Name="Label_main_pooling_config" Style="{StaticResource Label_standard}" Width="100" Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>
                                                                </WrapPanel>

                                                                <WrapPanel Orientation="Horizontal" Margin="10,1" VerticalAlignment="Center"  >
                                                                    <Label Style="{StaticResource Label_standard_bold}" Width="60" HorizontalAlignment="Left">STATE:</Label>
                                                                    <Label x:Name="Label_main_pooling_state" Style="{StaticResource Label_standard}" Width="100" Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>
                                                                </WrapPanel>

                                                                <WrapPanel Orientation="Horizontal" Margin="10,1" VerticalAlignment="Center"  >
                                                                    <Label Style="{StaticResource Label_standard_bold}" Width="60" HorizontalAlignment="Left">TIME (ms):</Label>
                                                                    <Label x:Name="Label_main_pooling_time" Style="{StaticResource Label_standard}" Width="100"/>
                                                                </WrapPanel>
                                                            </WrapPanel>
                                                        </WrapPanel>

                                                        <Border HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1,1,2,2" CornerRadius="5" Background="White">
                                                            <WrapPanel Orientation="Horizontal" Margin="4">
                                                                <StackPanel Orientation="Vertical">
                                                                    <Label x:Name="Label_title_uwb_name" Style="{StaticResource Label_standard_bold}" Width="80"  Height="17">NAME</Label>
                                                                    <Label x:Name="Label_title_uwb_id" Style="{StaticResource Label_standard_bold}"  Width="80" Height="17">ID</Label>
                                                                    <Label x:Name="Label_title_uwb_slave" Style="{StaticResource Label_standard_bold}"  Width="80" Height="17">SLAVE</Label>
                                                                    <Label x:Name="Label_title_uwb_lin_com" Style="{StaticResource Label_standard_bold}" Width="80" Height="17">LIN COM</Label>
                                                                    <Label x:Name="Label_title_uwb_lin_error" Style="{StaticResource Label_standard_bold}" Width="80" Height="17">LIN ERROR</Label>
                                                                    <Label x:Name="Label_title_uwb_cycle_time" Style="{StaticResource Label_standard_bold}"  Width="80" Height="17">CYCLE TIME</Label>
                                                                    <Label x:Name="Label_title_uwb_state" Style="{StaticResource Label_standard_bold}"  Width="80" Height="17">STATE</Label>
                                                                    <Label x:Name="Label_title_num_tags" Style="{StaticResource Label_standard_bold}" Width="80" Height="17">NUM TAGS</Label>
                                                                    <Label x:Name="Label_title_num_zones" Style="{StaticResource Label_standard_bold}"  Width="80" Height="17">NUM ZONES</Label>
                                                                </StackPanel>

                                                                <StackPanel Orientation="Vertical">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_name_value1" Style="{StaticResource Label_standard_bold}"  Width="90"  Height="17" HorizontalContentAlignment="Center">UWB1</Label>
                                                                        <Label x:Name="Label_name_uwb_name_value2" Style="{StaticResource Label_standard_bold}" Width="90"  Height="17" HorizontalContentAlignment="Center">UWB2</Label>
                                                                        <Label x:Name="Label_name_uwb_name_value3" Style="{StaticResource Label_standard_bold}" Width="90"  Height="17" HorizontalContentAlignment="Center">UWB3</Label>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_id_value1" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_id_value2" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_id_value3" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_slave_value1" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_slave_value2" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_slave_value3" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_lin_com_value1" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_lin_com_value2" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_lin_com_value3" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_lin_error_value1" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_lin_error_value2" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_lin_error_value3" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Label x:Name="Label_name_uwb_cycle_time_value1" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_cycle_time_value2" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                        <Label x:Name="Label_name_uwb_cycle_time_value3" Style="{StaticResource Label_standard}" Width="90" Height="17" HorizontalContentAlignment="Right" Padding="0,0,30,0"></Label>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
