                                                                    <Button x:Name="Button_read_sas360con_hist_log" Style="{StaticResource Button_rounded}" Height="26" Width="100" Content="READ" Margin="20,5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_read_sas360con_hist_log_Click"/>

                                                                    <Grid>
                                                                        <Image x:Name="Image_warning_sas360con_hist_log" Visibility="Hidden"  Source="/Images/warning.png" Height="25" />
                                                                        <Image x:Name="Image_read_ok_sas360con_hist_log" Visibility="Hidden"  Source="/Images/apply.png" Height="25" />
                                                                    </Grid>
                                                                </WrapPanel>
                                                            </Border>

                                                            <Button x:Name="Button_export_sas360con_hist_log" Style="{StaticResource Button_rounded}"  VerticalAlignment="Center" HorizontalAlignment="Right"  Height="30" Width="30" Margin="50,5" Click="Button_export_sas360con_hist_log_Click">
                                                                <Image Height="22" Width="22" Source="/Images/excel.png"/>
                                                            </Button>

                                                        </WrapPanel>
                                                    </Border>

                                                    <ListView x:Name="Listview_sas360con_hist_log" Style="{StaticResource Listview_style}" Margin="5" Height="820" HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                        <ListView.View>
                                                            <GridView  >
                                                                <GridViewColumn x:Name="Gridview_hist_abs_index" Width="100"  Header="INDEX" DisplayMemberBinding="{Binding Absolute_event_index, Converter={StaticResource IntToHexConverter}}"  HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_hist_log_rtc_value" Width="160"  Header="RTC VALUE" DisplayMemberBinding="{Binding Log_rtc_value}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_hist_log_rtc_milisec" Width="120"  Header="RTC MILISEC" DisplayMemberBinding="{Binding Log_rtc_milisecs}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridview_hist_log_regsiter_type_codif" Width="120"  Header="REGISTER ID" DisplayMemberBinding="{Binding Event_id}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                                <GridViewColumn x:Name="Gridviewhist_log_historic_value_1" Width="120"  Header="VAL1" DisplayMemberBinding="{Binding Val1}" HeaderContainerStyle="{StaticResource Gridview_header_style}"/>
                                                            </GridView>
                                                        </ListView.View>
                                                    </ListView>
