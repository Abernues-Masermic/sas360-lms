                                                            <Label Style="{StaticResource Label_standard_bold}" Width="77" HorizontalAlignment="Left">AUDIO__OUT2:</Label>
                                                            <Label x:Name="Label_main_output_audio2" Style="{StaticResource Label_standard}" Width="70"/>
                                                        </WrapPanel>

                                                    </WrapPanel>

                                                    <Line X1="5" X2="300" Height="10" Margin="0,5,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappannel_self_id"  Orientation="Horizontal" HorizontalAlignment="Left">

                                                        <Label Style="{StaticResource Label_standard_bold}" Width="50">CONTAG:</Label>
                                                        <Label x:Name="Label_main_assigned_self_contag_id" Style="{StaticResource Label_standard}" Width="110"/>

                                                        <Label Style="{StaticResource Label_standard_bold}" Width="50">DRVTAG:</Label>
