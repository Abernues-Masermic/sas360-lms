                                                        <Label x:Name="Label_main_zones_slow_range" Style="{StaticResource Label_standard}" Width="40"/>
                                                        
                                                    </WrapPanel>

                                                    <WrapPanel x:Name="Wrappannel_total"  Orientation="Vertical" HorizontalAlignment="Left"  Margin="0,5,0,0">
                                                        
                                                        <WrapPanel x:Name="WrapPanel_total_tags" Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__TAGS:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_tags_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_tags_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_tags_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_tags_R" Style="{StaticResource Label_standard}" Width="60"/>
                                                        </WrapPanel>

                                                        <WrapPanel  x:Name="WrapPanel_total_ped"  Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__PED:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_ped_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_ped_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_ped_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_ped_R" Style="{StaticResource Label_standard}" Width="60"/>

                                                        </WrapPanel>

                                                        <WrapPanel  x:Name="WrapPanel_total_drv"  Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__DRV:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_drv_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_drv_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_drv_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_drv_R" Style="{StaticResource Label_standard}" Width="60"/>

                                                        </WrapPanel>

                                                        <WrapPanel  x:Name="WrapPanel_total_lv"  Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__LV:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_lv_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_lv_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_lv_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_lv_R" Style="{StaticResource Label_standard}" Width="60"/>

                                                        </WrapPanel>

                                                        <WrapPanel  x:Name="WrapPanel_total_hv"  Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__HV:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_hv_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_hv_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_hv_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_hv_R" Style="{StaticResource Label_standard}" Width="60"/>

                                                        </WrapPanel>

                                                        <WrapPanel  x:Name="WrapPanel_total_zones"  Orientation="Horizontal">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">TOTAL__ZONES:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">D:</Label>
                                                            <Label x:Name="Label_total_zones_D" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">A:</Label>
                                                            <Label x:Name="Label_total_zones_A" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">N:</Label>
                                                            <Label x:Name="Label_total_zones_N" Style="{StaticResource Label_standard}" Width="60"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="20">R:</Label>
                                                            <Label x:Name="Label_total_zones_R" Style="{StaticResource Label_standard}" Width="60"/>
                                                        </WrapPanel>
                                                    </WrapPanel>


                                                    <Line X1="5" X2="300" Height="10" Margin="0,5,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappanel_main_amnagement" Orientation="Vertical">

                                                        <WrapPanel Orientation="Horizontal" Margin="2">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">ER/WA__CODIF:</Label>
                                                            
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">ERR:</Label>
                                                            <Label x:Name="Label_main_error_code" Style="{StaticResource Label_standard}" Width="80" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave" Cursor="Hand" Foreground="#01336d"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">WAR:</Label>
                                                            <Label x:Name="Label_main_war_code" Style="{StaticResource Label_standard}" Width="80" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave" Cursor="Hand" Foreground="#01336d"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">CHANGE__COUNT:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">INT/CFG:</Label>
                                                            <Label x:Name="Label_main_int_cfg_change_count" Style="{StaticResource Label_standard}" Width="80"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">IOT/NVR:</Label>
                                                            <Label x:Name="Label_main_iot_nvr_change_count" Style="{StaticResource Label_standard}" Width="80"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">EVENT__LOG:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">LAST__ID:</Label>
                                                            <Label x:Name="Label_main_event_log_last_id" Style="{StaticResource Label_standard}" Width="80"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">TOTAL:</Label>
                                                            <Label x:Name="Label_main_event_log_total" Style="{StaticResource Label_standard}" Width="80"/>
                                                        </WrapPanel>

                                                        <WrapPanel Orientation="Horizontal" Margin="2">
                                                            <Label Style="{StaticResource Label_standard_bold}" Width="120">HIST__LOG:</Label>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">LAST__ID:</Label>
                                                            <Label x:Name="Label_main_hist_log_last_id" Style="{StaticResource Label_standard}" Width="80"/>

                                                            <Label Style="{StaticResource Label_standard_bold}" Width="80">TOTAL:</Label>
                                                            <Label x:Name="Label_main_hist_log_total" Style="{StaticResource Label_standard}" Width="80"/>
                                                        </WrapPanel>

                                                    </WrapPanel>
                                                    
                                                    
                                                    <Line X1="5" X2="300" Height="10" Margin="0,5,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Border x:Name="Border_rtc_utc" Background="Black" CornerRadius="5" Width="250" Margin="0" VerticalAlignment="Bottom" Cursor="Hand" MouseDown="Border_rtc_utc_date_MouseDown">
                                                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <Label x:Name="Label_main_rtc_utc_date"  Style="{StaticResource Label_subtitle}" Padding="2" HorizontalContentAlignment="Right" Width="170"/>
                                                                <Label Style="{StaticResource Label_subtitle}" Padding="1" >:</Label>
                                                                <Label x:Name="Label_main_rtc_milliseconds"  Style="{StaticResource Label_subtitle}" HorizontalContentAlignment="Left" Width="65"/>
                                                            </WrapPanel>
                                                        </Border>

                                                        <Button x:Name="Button_send_current_datetime" Style="{StaticResource Button_rounded}" Height="20"  Margin="2,0,0,0" Click="Button_send_current_datetime_Click">
                                                            <Image Source="/Images/date_icon.png" Height="15"></Image>
                                                        </Button>

                                                        <Grid>
                                                            <Image x:Name="Image_main_utc_change_warning" Source="/Images/warning.png" Visibility="Hidden" Height="20" Margin="2,0,0,0"/>
                                                            <Image x:Name="Image_main_utc_change_error" Source="/Images/delete.png" Visibility="Collapsed" Height="20" Margin="2,0,0,0"/>
                                                        </Grid>
                                                    </StackPanel>


                                                </StackPanel>
                                            </Border>

                                            <StackPanel Orientation="Vertical" Grid.Column="1">

                                                <Border x:Name="Border_main_id" Style="{StaticResource Border_shadow}">
                                                    <Grid>
  
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition></ColumnDefinition>
                                                            <ColumnDefinition Width="140"></ColumnDefinition>
                                                            <ColumnDefinition Width="170"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>

                                                        <WrapPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" Margin="1">

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
                                                                <Label Style="{StaticResource Label_standard_bold}" Width="67">CLIENT ID:</Label>
                                                                <Label x:Name="Label_main_client_id" Style="{StaticResource Label_standard}" Width="50"/>
                                                            </WrapPanel>

                                                            <WrapPanel Orientation="Horizontal" Margin="1">
