                                                        <Label x:Name="Label_main_rtc_utc_sec" Style="{StaticResource Label_standard}" Width="80"/>
                                                        
                                                        <Label Style="{StaticResource Label_standard_bold}" Width="65" HorizontalAlignment="Left">LMS__WD:</Label>
                                                        <Label x:Name="Label_main_master_watchdog" Style="{StaticResource Label_standard}" Width="80"/>
                                                    </WrapPanel>

                                                    <Line X1="5" X2="300" Height="10" Margin="0,5,0,0" Stroke="Black" HorizontalAlignment="Left"/>

                                                    <WrapPanel x:Name="Wrappanel_output" Orientation="Vertical">

                                                        <WrapPanel Orientation="Horizontal" Margin="2">
