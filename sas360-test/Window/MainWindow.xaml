                    <TabItem x:Name="Tab_state" Header="STATE"   Style="{DynamicResource ResourceKey=Tabcontrol_item_left_style}">
                        <Border x:Name="Border_state" Style="{StaticResource Border_shadow}"  BorderThickness="3,3,2,2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   SnapsToDevicePixels="True">
