                                                            </Border>

                                                            <Border Style="{DynamicResource ResourceKey=Border_shadow}" Margin="2">
                                                                <WrapPanel Orientation="Horizontal" Margin="2">
                                                                    <Label Style="{StaticResource Label_standard_bold}" VerticalAlignment="Center" Width="60">INI:</Label>
                                                                    <xctk:DecimalUpDown x:Name="DecimalUpDown_sas360con_hist_log_ini" Style="{StaticResource DecimalUpDownStyle}" Width="80" Height="25"/>

                                                                    <Label Style="{StaticResource Label_standard_bold}" VerticalAlignment="Center" Width="60" Margin="15,5">NUM:</Label>
