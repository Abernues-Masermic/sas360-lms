                                                            <Label x:Name="Label_main_output_ext" Style="{StaticResource Label_standard}" Width="70"  Cursor="Hand" Foreground="#01336d" MouseEnter="LabelInfoOnMouseEnter" MouseLeave="LabelInfoOnMouseLeave"/>
