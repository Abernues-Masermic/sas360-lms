<Window x:Class="sas360_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converter="clr-namespace:sas360_test" 
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1000" Width="1860"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"  
        AllowsTransparency="True"  
        Background="Transparent"      
        Loaded="Window_Loaded">

    <Window.Resources>

        <converter:FormatToInfoConverter x:Key="FormatToInfoConverter"/>
        <converter:IntToHexConverter x:Key="IntToHexConverter"/>
        <converter:UIntToHexConverter x:Key="UIntToHexConverter"/>
        <converter:MetricaConverter x:Key="MetricaConverter"/>

        <Storyboard x:Key="BlinkConnectStoryboard" x:Name="BlinkConnect">
            <ColorAnimation From="White" To="Green"  RepeatBehavior="Forever" Duration="00:00:00.3"
                            Storyboard.TargetName="Ellipse_blink"
                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"/>
        </Storyboard>

        <Storyboard  x:Key="TagZoneStrokeStoryBoard" x:Name="TagZoneStrokeStoryBoard">
            <ColorAnimation From="Black" To="#FF6459" Duration="0:0:1" RepeatBehavior="Forever" 
                            Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)" />
        </Storyboard>

        <Storyboard x:Key="ShowHideStoryboard">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="{x:Null}" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:01" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>

    <Border  Style="{StaticResource Border_background_separator}">
        <Border  Style="{StaticResource Border_background}">

            <Grid>

                <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top" Height="45" Margin="640,15,0,0" Width="65" Panel.ZIndex="1000">

                    <Grid x:Name="Grid_start_stop" Panel.ZIndex="1000">
                        <Image x:Name="Image_start" Visibility="Collapsed"  Cursor="Hand" Source="/Images/Start.png" MouseDown="Image_start_MouseDown"/>
                        <Image x:Name="Image_stop" Visibility="Visible" Cursor="Hand" Source="/Images/Stop.png" MouseDown="Image_sfront_MouseDown"/>
                    </Grid>


                    <Image x:Name="Image_connection_warning" Source="/Images/warning.png" Height="15"  VerticalAlignment="Bottom" Visibility="Collapsed" Margin="5,0,0,3" Cursor="" />

                </WrapPanel>

                <Ellipse Name="Ellipse_blink" Panel.ZIndex="1000" Fill="White" Stroke="Black" StrokeThickness="0.3"  Width="15" Height="15" VerticalAlignment="Top" Margin="228,15,5,5">
                    <Ellipse.BitmapEffect>
                        <DropShadowBitmapEffect Color="Black" Direction="-5" ShadowDepth="1" Softness=".1" />
                    </Ellipse.BitmapEffect>
                </Ellipse>

                <StackPanel Orientation="Horizontal"   VerticalAlignment="Top" HorizontalAlignment="Right"  Margin="2,5,10,2"  Panel.ZIndex="1000">

                    <Button x:Name="Button_minimize" Style="{StaticResource Button_rounded}"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_minimize_Click">
                        <Line X1="0" X2="10" Stroke="Black" StrokeThickness="2" />
                    </Button>

                    <Grid>
                        <Button x:Name="Button_maximize" Style="{StaticResource Button_rounded}" Visibility="Visible" Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_maximize_Click">
                            <Rectangle Width="10" Height="10" Stroke="Black" StrokeThickness="2"></Rectangle>
                        </Button>

                        <Button x:Name="Button_normal_window" Style="{StaticResource Button_rounded}" Visibility="Collapsed"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_normal_window_Click">
                            <Grid Margin="-1,-1,0,0">
                                <Rectangle Width="9" Height="9" Margin="4,0,0,0" Stroke="Black"  StrokeThickness="1"/>
                                <Rectangle Width="9" Height="9" Margin="0,4,0,0"  Stroke="Black" Fill="White"   StrokeThickness="1"/>
                            </Grid>
                        </Button>
                    </Grid>

                    <Button x:Name="Button_exit" Style="{StaticResource Button_rounded}"  Height="20" Width="20" Margin="2" HorizontalAlignment="Right" Click="Button_exit_Click">
                        <Path Data="M0,0L10,10M10,0L0,10" Stroke="Black" StrokeThickness="2" />
                    </Button>

                </StackPanel>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Height="30" Margin="5, 35,10,0"  VerticalAlignment="Top" Panel.ZIndex="1000"   >
                    <Button x:Name="Button_setting_app" Style="{StaticResource Button_rounded}" Height="30" Width="30"  Click="Button_setting_app_Click">
                        <Image Height="22" Width="22" Source="/Images/settings.png"/>
                    </Button>
                </StackPanel>



                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="223,5,0,0" Cursor="" >
                    <Image  Width="340"  VerticalAlignment="Center" Source="/Images/senspain_360_white.png" MouseLeftButtonDown="Title_MouseDown"/>

                    <Border BorderBrush="White" BorderThickness="1" CornerRadius="4" Margin="20,2,0,0" >
                        <WrapPanel Orientation="Vertical" Margin="10,0,10,3" >
                            <Label x:Name="Label_title" Style="{StaticResource Label_standard_bold}" Foreground="#FFECECEC" Content="LMS" FontFamily="Bahnschrift" Padding="0,2,0,0" FontSize="28" HorizontalAlignment="Center"/>
                            <Label x:Name="Label_ver" Style="{StaticResource Label_standard_bold}" Foreground="White" Content="LOCAL MONITORING SOFTWARE v.1.0" Padding="0" FontFamily="Bahnschrift SemiLight"  FontSize="16" VerticalAlignment="Bottom" />
                        </WrapPanel>
                    </Border>
                </WrapPanel>

                <Image  Width="165" Margin="0,0,180,0" VerticalAlignment="Top"  HorizontalAlignment="Right"  Source="/Images/senspain_logo.png"/>
                <Image  x:Name="Image_logo"  Width="110" Margin="0,38,50,0"  VerticalAlignment="Top" HorizontalAlignment="Right"  Source="/Images/masermic_sin_mechatronic_v2.png" Cursor="Hand" MouseDown="Image_logo_MouseDown" />
                
