                                            <Grid  Background="{DynamicResource ResourceKey=Tabcontent_panel}">

                                                <StackPanel Orientation="Vertical">

                                                    <Border x:Name="Border_sas360con_hist_log" Style="{DynamicResource ResourceKey=Border_shadow}" Margin="5">
                                                        <WrapPanel Orientation="Horizontal">

                                                            <Border Style="{DynamicResource ResourceKey=Border_shadow}" Margin="2">
