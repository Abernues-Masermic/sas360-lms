                                                                        <xctk:DecimalUpDown x:Name="DecimalUpDown_sas360con_event_log_num" Style="{StaticResource DecimalUpDownStyle}" Width="80" Height="25"/>
                                                                    </StackPanel>


                                                                    <Button x:Name="Button_read_sas360con_event_log" Style="{StaticResource Button_rounded}" Height="26" Width="100" Content="READ" Margin="20,5" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_read_sas360con_event_log_Click"/>

                                                                    <Grid>
                                                                        <Image x:Name="Image_read_warning_sas360con_event_log" Visibility="Hidden"  Source="/Images/warning.png" Height="25" />
                                                                        <Image x:Name="Image_read_ok_sas360con_event_log" Visibility="Hidden"  Source="/Images/apply.png" Height="25" />
                                                                    </Grid>
                                                                </WrapPanel>
                                                            </Border>

                                                            <Button x:Name="Button_export_sas360con_event_log" Style="{StaticResource Button_rounded}"  VerticalAlignment="Center" HorizontalAlignment="Right"  Height="30" Width="30" Margin="50,5" Click="Button_export_sas360con_event_log_Click">
